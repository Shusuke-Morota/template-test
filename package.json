{
  "name": "static-site-template",
  "version": "0.0.0",
  "author": "Daichi Sato",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "run-p -l -c clean dev:*",
    "dev:vite": "NODE_ENV=development vite",
    "dev:eleventy": "NODE_ENV=development eleventy --serve",
    "build": "run-s -l -c clean build:vite build:eleventy",
    "build:vite": "NODE_ENV=production vite build",
    "build:eleventy": "NODE_ENV=production eleventy",
    "preview": "vite preview",
    "lint": "run-p -l -c lint:*",
    "lint:eslint": "eslint src/js/**/*.js",
    "lint:stylelint": "stylelint **/*.{css,scss}",
    "lint:prettier": "prettier --check .",
    "fix": "run-s -l -c fix:eslint fix:stylelint fix:prettier",
    "fix:eslint": "eslint --fix .",
    "fix:stylelint": "stylelint --fix **/*.{css,scss}",
    "fix:prettier": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "gsap": "^3.9.1",
    "micromodal": "^0.4.10"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "autoprefixer": "^10.4.2",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.8",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sass": "^1.49.7",
    "stylelint": "^14.5.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-scss": "^4.1.0",
    "vite": "^2.7.2",
    "vite-plugin-imagemin": "^0.6.1"
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix .",
      "prettier --write ."
    ],
    "**/*.{json,md,css,html,yml,yaml,scss}": [
      "prettier --write ."
    ]
  },
  "volta": {
    "node": "16.14.0"
  }
}
